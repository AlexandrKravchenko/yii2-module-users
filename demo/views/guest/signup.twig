{% extends "@app/themes/basic/layouts/main.twig" %}

{% block contentTitle %}<i class="glyphicon glyphicon-user"></i>  {{ t('users.main', 'SIGNUP.TITLE') }} {% endblock %}

{% block content %}

    {% if app.session.hasFlash('danger') %}        
        <div class="alert alert-danger" role="alert">
            <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
            {{ app.session.getFlash('danger') }}
        </div>
    {% endif %}

    {% if app.session.hasFlash('success') %}        
        <div class="alert alert-success" role="alert">
            <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
            {{ app.session.getFlash('success') }}
        </div>
    {% endif %}

    <div class="col-md-6">
        {{ use('yii/widgets/ActiveForm') }}
        {% set form = active_form_begin() %}
    
        {{ form.field(user, 'username') | raw }}
        {{ form.field(user, 'email') | raw }}
        {{ form.field(user, 'password').passwordInput() | raw }}
        {{ form.field(user, 'repassword').passwordInput() | raw }}
        
        {{ form.field(profile, 'name') | raw }}
        {{ form.field(profile, 'surname') | raw }}
        
        {{ form.field(profile, 'whau') | raw }}
        
        <div class="form-group text-right">
            <input type="submit" value="{{ t('users.main', 'SIGNUP') }}" class="btn btn-primary" />
        </div>
        {{ active_form_end() }} 
    </div>
            
{% endblock content %}
